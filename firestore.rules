
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Grant read/write access to a user's own document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Grant read/write access to the rounds and mindset subcollections
    match /users/{userId}/rounds/{roundId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId}/mindset/{entryId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Grant access to chat messages
    match /users/{userId}/chats/{chatId}/messages/{messageId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Grant read access to analytics
    match /users/{userId}/analytics/latest {
      allow read: if request.auth.uid == userId;
    }

    // Grant read access to strategies
    match /strategies/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
    }
  }
}
